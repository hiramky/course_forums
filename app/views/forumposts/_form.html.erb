<div>
<%= form_for @forumpost do |f| %>
  <%= f.error_messages %>
  <% if params[:topic] %>
	<input type="hidden" id="topic_forumpost_id" name="forumpost[topic_id]" value="<%= params[:topic] %>" />
  <% end %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Create Post" %></p>
<% end %>
</div>